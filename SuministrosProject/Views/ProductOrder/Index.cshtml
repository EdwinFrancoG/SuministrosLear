@model IEnumerable<SuministrosProject.Models.ProductOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <br />
        <h2>Lista de Ordenes de compra</h2>
    </div>
</div>

<button type="button" onclick="NewPO()" class="btn btn-secondary" style="font-size:22px; border:none; background-color:#f4f4f4;"><i class="s7-note">Nuevo</i></button>
<br />
<br />
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requisicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            Fecha y hora
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdGafeteNavigation.Nombre)  @Html.DisplayFor(modelItem => item.IdGafeteNavigation.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requisicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if (item.Estado == "Nueva")
                {
                    @Html.ActionLink("Add ", "Details", new { id = item.IdProductOrder })
                    @Html.ActionLink(" | Delete", "Delete", new { id = item.IdProductOrder })
                }
                @if (item.Estado == "Pendiente")
                {
                    @Html.ActionLink("Recive ", "Edit", new { id = item.IdProductOrder })
                }
                @if (item.Estado == "Cerrada")
                {
                    @Html.ActionLink("See  ", "Details", new { id = item.IdProductOrder })
                    @Html.ActionLink(" | Delete", "Delete", new { id = item.IdProductOrder })
                }
                @*@Html.ActionLink("Edit", "Edit", new { id = item.IdProductOrder }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdProductOrder }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdProductOrder })*@
            </td>
        </tr>
    }

</table>

