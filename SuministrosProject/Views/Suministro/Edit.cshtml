@model SuministrosProject.Models.Suministro

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<link href="~/Content/styles/suministros.css" rel="stylesheet" />

<div class="" style="text-align:center;">
    <h3>EDIT SUPPLY</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdSuministro)

        <div class="form-group col-sm-6">
            <br />          
            <div class="col-sm-12">
                @Html.Label("SERIE")
                @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control", @id = "EditSerie" } })
                @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-6">
            <br />       
            <div class="col-sm-12">
                @Html.Label("NUMBER PART")
                @Html.DropDownList("IdNumeroParte", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdNumeroParte, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("LOCATION", new { @id = "LabelLocation" })
                @Html.DropDownList("idLocalizacion", null, htmlAttributes: new { @class = "form-control", @id = "idLocalizacionSum" })
                @Html.ValidationMessageFor(model => model.IdLocalizacion, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <br />
    <button type="submit" class="btn btn-rounded btn-space btn-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Save</font></font></button>
    <button class="btn btn-rounded btn-space btn-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cancel</font></font></button>
}
