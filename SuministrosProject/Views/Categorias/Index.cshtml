@model IEnumerable<SuministrosProject.Models.Categoria>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <br />
        <h2>Lista de Tipos de Suministros</h2>
    </div>
</div>

<div class="main-content container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <button type="button" onclick="NewCategoria()" class="btn btn-secondary" style="font-size:22px; border:none;"><i class="s7-note">Nuevo</i></button>
                </div>

                <div class="panel-body">
                    <table id="table1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Observacion</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoriaDescripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Observacion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IdCategoria }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.IdCategoria })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*Modal ok*@
<div id="idAlertPositive" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close"><span class="s7-close"></span></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="text-primary"><span class="modal-main-icon s7-check"></span></div>
                    <h3 class="mb-4">Awesome!</h3>
                    <p id="BodyPositive"></p>
                    <div class="mt-6">
                        <button type="button" onclick="redireccionarIndex()" data-dismiss="modal" class="btn btn-sm btn-space btn-secondary">Acept</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/assets/js/app-tables-datatables.js"></script>
