@model SuministrosProject.Models.DetallePo

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8">
        <h3>Agregar detalle de Orden de compra</h3>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.IdNumeroParte, "IdNumeroParte", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdNumeroParte", null, htmlAttributes: new { @class = "form-control", @id = "idNumberPart" })
                @Html.ValidationMessageFor(model => model.IdNumeroParte, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cantidadPedido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadPedido, new { htmlAttributes = new { @class = "form-control", @id = "idCantidadPedido" } })
                @Html.ValidationMessageFor(model => model.cantidadPedido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control", @id = "idObservacionDPO" } })
                @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
            </div>
        </div>


        <input style="display:none;" id="IdproductOrderDet" value="@ViewBag.IdProductOrder" placeholder="Numero de parte" class="form-control">

        <div class="form-group">
            <br />
            <div class="col-md-offset-2 col-md-10">
                <button type="button" onclick="GuardarDetallePO()" class="btn btn-primary">Agregar</button>
                <button type="button" class="btn btn-rounded btn-space btn-secondary" data-dismiss="modal"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cerrar</font></font></button>
            </div>
        </div>
    </div>
}
<script src="~/Content/JavaS/DetallePOFuntions.js"></script>