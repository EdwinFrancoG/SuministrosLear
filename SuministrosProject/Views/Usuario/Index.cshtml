@model IEnumerable<SuministrosProject.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    if (sessionStorage.length == 0 || sessionStorage.getItem("connected") == "false") {
        window.location.href = '/Login/loginGet';
    }
</script>

<br />
<br />
<div class="" style="text-align:center;">
    <h2>USERS LIST</h2>
</div>
<br />

<button type="button" onclick="NewUser()" class="btn btn-secondary" style="font-size:22px; border:none; background-color:#f4f4f4;"><i class="s7-note">New</i></button>
<br />
<br />

<table class="table table-hover table-striped table-filter-title">
    <tr>
        <th>
           PERFIL
        </th>
        <th>
            NAME
        </th>
        <th>
            LAST NAME
        </th>
        <th>
            STATE
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPerfilNavigation.PerfilName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdGafete }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdGafete }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdGafete })
            </td>
        </tr>
    }

</table>

<script src="~/Content/JavaS/User.js"></script>