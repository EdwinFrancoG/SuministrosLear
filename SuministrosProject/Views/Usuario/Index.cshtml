@model IEnumerable<SuministrosProject.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<br />
<div class="" style="text-align:center;">
    <h2>USERS LIST</h2>
</div>
<br />

<button type="button" onclick="NewUser()" class="btn btn-secondary" style="font-size:22px; border:none; color:#2cc185"><i class="s7-note">New</i></button>
<br />
<br />

<table class="table table-hover table-striped table-filter-title">
    <tr>
        <th>
            ID
        </th>
        <th>
            PERFIL
        </th>
        <th>
            NAME
        </th>
        <th>
            LAST NAME
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdGafete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPerfilNavigation.PerfilName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                <a href="#" onclick="EditUser('@item.IdGafete')"> Edit</a>  |
                <a href="#" onclick="DeleteUser('@item.IdGafete')"> Delete</a>
            </td>
        </tr>
    }

</table>

<script src="~/Content/JavaS/RedirectionsPages.js"></script>
<script src="~/Content/JavaS/User.js"></script>
