@model SuministrosProject.Models.NumeroParte

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<link href="~/Content/styles/StylesApp.css" rel="stylesheet" />

<div class="" style="text-align:center;">
    <h2>NEW PART NUMBER</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <br />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("DESCRIPTION")
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control focus", @id = "idDescriptionNP" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("MODEL")
            @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", @id = "ModelNP" } })
            @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("BRAND")
            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", @id = "BrandNP" } })
            @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("SUPLY TYPE")
            @Html.DropDownList("IdCategoria", null, htmlAttributes: new { @class = "form-control", @id = "TypeNP" })
            @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("OBSERTVATION")
            @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control", @id = "ObservationNP" } })
            @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <br />
        <button type="button" data-dismiss="modal" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" onclick="SaveNumberPart()" data-dismiss="modal" class="btn btn-primary">Save</button>
    </div>

</div>
}
