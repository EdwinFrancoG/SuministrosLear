@model SuministrosProject.Models.Entrada

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<link href="~/Content/styles/suministros.css" rel="stylesheet" />

<div class="" style="text-align:center;">
    <h2>NEW SUPPLY ENTRY</h2>
    <br />
    <br />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("LOCATION")
                @Html.DropDownList("idLocalizacion", null, htmlAttributes: new { @class = "form-control", @id = "idLocalizacion" })
                @Html.ValidationMessageFor(model => model.IdLocalizacion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("SUPPLY SERIE")
                @Html.EditorFor(model => model.SerieSuministro, new { htmlAttributes = new { @class = "form-control focus", @id = "serieSum" } })
                @Html.ValidationMessageFor(model => model.SerieSuministro, "", new { @class = "text-danger" })
            </div>
        </div>
        <input style="display:none" id="IdnumeroParte" value="@ViewBag.IdNumeroParte" placeholder="Numero de parte" class="form-control">
        <input style="display:none" id="IdProductO" value="@ViewBag.IdPO" placeholder="Orden de producto" class="form-control">
    </div>
}

<script src="~/Content/JavaS/EntradaFuctions.js"></script>
